@using PlayMusicProject.Models;
@model PlayMusicProjectMode
@{
    Layout = "_LayoutAdmin";
}
<title>Info Music</title>
<form action="/Admin/Home/Music" method="Get" id="submitForm">
    @*<form>*@
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Music Table</h4>
                <a href="/Admin/Home/NewMusic" type="button" class="btn btn-primary btn-rounded btn-fw">New Music</a>

                <div class="input-group rounded mt-4">
                    <input type="search" class="form-control rounded" name="seachName" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <button type="submit" style="width:70px">
                        <i class="mdi mdi-account-search"></i>
                    </button>
                </div>
                <div class="navbar navbar-light bg-light mt-3">
                    <div class="form-inline align-items-center">
                        <select name="idSapXepKiem">
                            <option value="0">Sắp xếp theo</option>
                            <option value="1">Theo Id</option>
                            <option value="2">Theo AccountUser</option>
                            <option value="3">Theo UserName</option>
                            <option value="4">Theo IsAdmin</option>
                            <option value="5">Theo IsBan</option>
                        </select>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </div>
                </div>
                <h4 class="card-title">Info Music</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    IdMusic
                                </th>
                                <th>
                                    NameMusic
                                </th>
                                <th>
                                    IdLyricMusic
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Artists
                                </th>
                                <th>
                                    TopMusic
                                </th>
                                <th>
                                    IsNew
                                </th>
                                <th>
                                    DateTimeCreate
                                </th>
                                <th>
                                    Hành Động
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = (Model.PageNumber * Model.PageSize - Model.PageSize) + 1;
                                foreach (var item in Model.Music)
                                {
                                    <tr>
                                        <td class="py-1">
                                            @item.IdMusic
                                        </td>
                                        <td>
                                            @item.NameMusic
                                        </td>
                                        <td>
                                            @item.IdLyricMusic
                                        </td>
                                        <td>
                                            @item.NameCategory
                                        </td>
                                        <td>
                                            @item.NameArtists
                                        </td>
                                        <td>
                                            @item.TopMusic
                                        </td>
                                        <td>
                                            @item.IsNew
                                        </td>
                                        <td>
                                            @item.DateTimeCreate
                                        </td>
                                        <td>
                                            <a href="/Admin/Home/EditMusic?id=@item.IdMusic" type="button" class="btn btn-warning btn-rounded btn-icon">
                                                <i>Sửa</i>
                                            </a>
                                        </td>
                                        <td class="p-0">
                                            <button type="button" class="btn btn-danger" onclick="deleteMusic(@item.IdMusic)"><i>Xóa</i></button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="d-flex" style="margin-top:20px">
                        <div>
                            <div>
                                <select name="pageSize" id="pageSize">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                </select>
                                <span class="ml-3 text-nowrap m-3">Tổng music hiện tại: @Model.TotalCount </span>

                            </div>
                        </div>
                    </div>
                    <div class="d-flex" style="margin-top:20px">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @{
                                    if (Model.PageNumber > 1)
                                    {
                                        <li class="page-item" onclick="clickPage(@Model.PageNumber - 1)">
                                            <a class="page-link" href="#">Previous</a>
                                        </li>
                                    }

                                    for (int i = 1; i <= Model.PageCount; i++)
                                    {
                                        if (i == Model.PageNumber)
                                        {
                                            <li class="page-item active" onclick="clickPage(@i)">
                                                <a class="page-link" href="#">@i</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item" onclick="clickPage(@i)">
                                                <a class="page-link" href="#">@i</a>
                                            </li>
                                        }
                                    }
                                    if (Model.PageNumber < Model.PageCount)
                                    {
                                        <li class="page-item" onclick="clickPage(@Model.PageNumber + 1)">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="number" name="pageNumber" value="@Model.PageNumber" hidden="hidden" />
</form>
@section AdminScrips
    {
    <script>
        $('#pageSize').val(@Model.PageSize)
        function clickPage(pageNumber) {
            $("input[name='pageNumber']").val(pageNumber);
            $("#submitForm").submit();
        }

        $("select[name='pageSize']").change(function () {
            $("input[name='pageNumber']").val(1);
            $("#submitForm").submit();
        })

        function deleteMusic(id) {
            var check = confirm("Bạn có chắc xóa music không");
            if (check) {
                window.location.href = '/Admin/Home/DeleteMusic?id=' + id;
            }
        }
    </script>
}